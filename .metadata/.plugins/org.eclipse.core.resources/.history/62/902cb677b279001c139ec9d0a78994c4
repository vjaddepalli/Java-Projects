
public class Main2 {

	public static void main(String[] args) {

		double[] prices = { 10.0, 5.0, 7.0, 8.0 };
		double sum = 0;
		double max=0.0;
		double min=0.0;
		for (double d : prices) {
			
			if(max<d) 
				max=d;
			if(d<min)
				min=d;
			
			sum = sum + d;

		}

		System.out.println("Sum: " + sum);
		System.out.println("Max: "+max);
		System.out.println("Min: "+min);
		System.out.println("Avg: "+ sum/(prices.length-1));
	}

}
