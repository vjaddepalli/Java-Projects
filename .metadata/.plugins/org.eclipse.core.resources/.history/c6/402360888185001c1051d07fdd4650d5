package com.zensar.training.ui;

public class Main1 {
	public static void main(String[] args) throws InterruptedException {
		//Thread t=new Thread(); // one way of intialization
		
		Thread t=Thread.currentThread(); //current thread reference creation
		
		System.out.println("Program Begins");
		for(int i=1;i<=10;i++) {
			//getting thread name ny use getname()
			System.out.println(t.getName()+" : "+i);
			t.sleep(1000); //afetr 1000ms thread will sleep, so delayed every iteration
		}
		System.out.println("Program Ends");

	}
}
